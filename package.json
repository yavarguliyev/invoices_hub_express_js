{
	"name": "invoices-hub",
	"version": "1.0.0",
	"description": "Invoices Hub",
	"main": "dist/index.js",
	"repository": "git@github.com:yavarguliyev/invoices-hub.git",
	"author": "Yavar Guliyev",
	"license": "MIT",
	"scripts": {
		"clean:dist": "rimraf dist/*",
		"lint": "esw --watch --ext .ts src",
		"build": "yarn clean:dist",
		"build:prod": "yarn clean:dist && tsc",
		"clean:migrations": "rimraf migrations/*.js",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
		"migrations:create": "node scripts/createMigration.js",
		"migrations:generate": "yarn typeorm migration:generate migrations/ -d src/data-source.ts",
		"migrations:run": "yarn typeorm migration:run -d src/data-source.ts",
		"migrations:revert": "yarn typeorm migration:revert -d src/data-source.ts",
		"mup": "yarn migrations:run",
		"mdn": "yarn migrations:revert",
		"start:tsclint": "yarn clean:dist && concurrently --kill-others --names lint,tsc,nodemon --prefix-colors green,blue,yellow \"yarn lint\" \"tsc --preserveWatchOutput --watch\"",
		"start": "yarn start:tsclint \"sleep 8 && nodemon\"",
		"start:prod": "yarn build:prod && NODE_PATH=dist node -r tsconfig-paths/register dist/index.js",
		"test": "jest --config jest.config.js",
		"pm2:status": "pm2 status",
		"pm2:clean": "pm2 delete all && pm2 save --force && pm2 status && yarn pm2:status",
		"pm2:dev": "pm2 start ecosystem.config.js",
		"loadtest:dev": "npx loadtest -n 3600 -c 1200 -k http://localhost:3000/api/v1/healthcheck",
		"perform:dev": "time curl --get http://localhost:3000/api/v1/healthcheck"
	},
	"dependencies": {
		"amqplib": "^0.10.5",
		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"express-session": "^1.18.1",
		"express-validator": "^7.2.1",
		"helmet": "^8.0.0",
		"jsonwebtoken": "^9.0.2",
		"license-checker": "^25.0.1",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"pg": "^8.13.1",
		"redis": "^4.7.0",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.0.1",
		"routing-controllers": "^0.10.4",
		"routing-controllers-openapi": "^4.0.0",
		"ts-node": "^10.9.2",
		"typedi": "^0.10.0",
		"typeorm": "^0.3.20",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@types/amqplib": "^0.10.6",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.0",
		"@types/express-session": "^1.18.1",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.8",
		"@types/node": "^22.12.0",
		"@types/passport-jwt": "^4.0.1",
		"@types/swagger-ui-express": "^4.1.7",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"class-validator-jsonschema": "^5.0.1",
		"concurrently": "^9.1.2",
		"eslint": "^8.26.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.4.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-watch": "^8.0.0",
		"jest": "^29.7.0",
		"loadtest": "^8.1.1",
		"nodemon": "^3.1.9",
		"pm2": "^5.4.3",
		"swagger-ui-express": "^5.0.1",
		"ts-jest": "^29.2.5",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3"
	}
}
